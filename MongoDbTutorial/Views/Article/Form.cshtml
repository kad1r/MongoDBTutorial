@model ArticleVM

@using MongoDbTutorial.Models;

@{
	ViewBag.Title = "Article Form";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="deleteRecord" value="@(Model.Article != null ? Model.Article.Id : "")"/>
<div class="col-xs-12">
	@using (Html.BeginForm("Form", "Article", FormMethod.Post, new { @class = "form-horizontal" }))
	{
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true)

		<div class="form-row">
			<div class="col">
				<div class="form-group">
					@Html.LabelFor(x => x.Article.Heading, new { @class = "control-label" })
					<div>
						@Html.TextBoxFor(x => x.Article.Heading, new { @class = "form-control", placeholder = "" })
						@Html.ValidationMessageFor(x => x.Article.Heading)
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(x => x.Article.Summary, new { @class = "control-label" })
					<div>
						@Html.TextBoxFor(x => x.Article.Summary, new { @class = "form-control", placeholder = "" })
						@Html.ValidationMessageFor(x => x.Article.Summary)
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(x => x.Article.Description, new { @class = "control-label" })
					<div>
						@Html.TextAreaFor(x => x.Article.Description, new { @class = "form-control", rows = "5", placeholder = "" })
						@Html.ValidationMessageFor(x => x.Article.Description)
					</div>
				</div>
			</div>
			<div class="col">
				<div class="form-group">
					@Html.LabelFor(x => x.Article.CategoryId, new { @class = "control-label" })
					<div>
						@Html.DropDownListFor(x => x.Article.CategoryId, new SelectList(Model.Categories, "Value", "Text"), "", new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Article.CategoryId)
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(x => x.Article.TagList, new { @class = "control-label" })
					<div>
						@Html.TextBoxFor(x => x.Article.TagList, new { @class = "form-control", placeholder = "" })
						@Html.ValidationMessageFor(x => x.Article.TagList)
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(x => x.Article.SeoDescription, new { @class = "control-label" })
					<div>
						@Html.TextAreaFor(x => x.Article.SeoDescription, new { @class = "form-control", rows = "5", placeholder = "" })
						@Html.ValidationMessageFor(x => x.Article.SeoDescription)
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(x => x.Article.DatePublished, new { @class = "control-label" })
					<div>
						@Html.TextBoxFor(x => x.Article.DatePublished, new { @class = "form-control", type = "date" })
						@Html.ValidationMessageFor(x => x.Article.DatePublished)
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(x => x.Article.IsActive, new { @class = "control-label" })
					<div class="checkbox">
						@Html.CheckBoxFor(x => x.Article.IsActive)
					</div>
				</div>
			</div>
		</div>

		<div class="clearfix"></div>
		<button type="submit" class="btn btn-outline-primary">Submit</button>
		<a href="@Url.Action("Index")" class="btn btn-outline-secondary">Back to list</a>
	}
</div>
