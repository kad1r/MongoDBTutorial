<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<link href="~/Content/login.min.css" rel="stylesheet" />
</head>
<body>
	<div class="sidenav">
		<div class="login-main-text">
			<h2>MongoDB Blog Tutorial</h2>
			<p>Login or register from here to access.</p>
		</div>
	</div>
	<div class="main">
		<div class="col-md-6 col-sm-12">
			<div class="login-form">
				@RenderBody()
			</div>
		</div>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/bootstrap")
	<script src="~/Scripts/main/site.js?v=@DateTime.Now.ToString("ddMMyyyy")"></script>
	<script src="~/Scripts/main/helper.js?v=@DateTime.Now.ToString("ddMMyyyy")"></script>
	@RenderSection("scripts", required: false)
	@{
		if (TempData["process_result"] != null)
		{
			<script type="text/javascript">
                //alert("@TempData["process_result"]");
			</script>
		}
	}
</body>
</html>
